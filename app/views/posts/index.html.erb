<div class="container">
  <h1 class="my-3">Posts</h1>

  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary mb-3' %>

  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post %></h5>
        <p class="card-text"><%= post.content %></p>

        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %> 
        <%= link_to 'Delete', post_path(post),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
