<div class="container mt-3">
  <h1 class="title">Jackie Blag</h1>
  <div class="text-center">
    <%= image_tag("biel-morro-ket-unsplash.jpg", alt: "An awesome image from Unsplash", class: "img-fluid") %>
  </div>
  <br>
  <div class="d-flex justify-content-center mb-3">
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to post.title, post %>
            </h5>
            <p class="card-text">
              <%= post.content %>
            </p>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-sm mr-2' %> 
            <%= link_to 'Destroy', post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
